# DigiAuth Development Environment
# Copy this to .env and customize as needed

# ─── Server ──────────────────────────────────────────────────────────
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_ENV=development

# ─── PostgreSQL ──────────────────────────────────────────────────────
DB_HOST=localhost
DB_PORT=5432
DB_USER=digiauth
DB_PASSWORD=digiauth
DB_NAME=digiauth
DB_SSLMODE=disable

# ─── Redis ───────────────────────────────────────────────────────────
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ─── Authentication ──────────────────────────────────────────────────
AUTH_ACCESS_TOKEN_TTL=15m
AUTH_REFRESH_TOKEN_TTL=720h
AUTH_JWT_PRIVATE_KEY=keys/private.pem
AUTH_JWT_PUBLIC_KEY=keys/public.pem

# ─── Digi-ID ─────────────────────────────────────────────────────────
DIGIID_CALLBACK_URL=http://localhost:8080/api/v1/auth/callback
DIGIID_CHALLENGE_TTL=5m
DIGIID_UNSECURE=true
